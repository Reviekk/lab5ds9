<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
</head>
<body>
    <h1>Todos los Productos</h1>
    <% if (products.length > 0) { %>
        <% products.forEach(product => { %>
            <div>
                <h3><%= product.name %></h3>
                <p>Precio: $<%= product.price %></p>
            </div>
        <% }) %>
    <% } else { %>
        <p>No hay productos disponibles.</p>
    <% } %>

    <a href="/">Volver al inicio</a>
</body>
</html>
